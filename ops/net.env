# Network and Environment Configuration for ROS2 AMR

# Ports
PORT_DASHBOARD=3001
PORT_SERVER=8000
PORT_METRICS=8080
PORT_PROMETHEUS=9090
PORT_GRAFANA=3002
PORT_WEBSOCKET=8765

# RMW Configuration
RMW_IMPLEMENTATION=rmw_fastrtps_cpp
ROS_DOMAIN_ID=0

# Binding Addresses
BIND_ADDRESS=0.0.0.0
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000/ws

# Display Configuration (for Webots)
DISPLAY=:0
QT_X11_NO_MITSHM=1

# Docker Configuration
COMPOSE_PROJECT_NAME=ros2-amr
COMPOSE_FILE=compose.yml

# Development Settings
DEBUG=false
NODE_ENV=development

# Logging
LOG_LEVEL=info
